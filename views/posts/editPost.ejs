<%- include("../partials/header"); %>


<div class="container-fluid w-50 px-lg-5">
	<form
		class="d-flex flex-column justify-content-center"
		action="/forums/<%= forumId %>/posts/<%= post._id %>?_method=PUT"
		method="POST"
	>
		<div class="form-group">
			<label>Post title</label>
			<input
				type="text"
				class="form-control"
				name="post[title]"
				value="<%= post.title %>"
			/>
		</div>
		<div class="form-group mb-4">
			<label>Content</label>
			<input
				type="text"
				class="form-control"
				name="post[text]"
				value="<%= post.text %>"
			/>
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary btn-block createBtn">Edit</button>
		</div>
	</form>
</div>

<%- include("../partials/footer"); %>