<%- include("../partials/header"); %>


<div class="container-fluid w-50">
	<form
		class="d-flex flex-column justify-content-center"
		action="/forums/<%= forumId %>/posts"
		method="POST"
	>
		<div class="form-group">
			<label>Title</label>
			<input type="text" class="form-control" name="post[title]" />
		</div>
		<div class="form-group mb-4">
			<label>Content</label>
			<input type="text" class="form-control" name="post[text]" />
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary btn-block createBtn">Create</button>
		</div>
	</form>
</div>

<%- include("../partials/footer"); %>
